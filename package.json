{
  "name": "@imin/speck",
  "version": "0.3.0",
  "description": "Specification for TypeScript types, Run-time validation & test-data generation",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "test": "npm run generate-d-ts",
    "build": "npm run generate-d-ts",
    "generate-d-ts": "rm lib/index.d.ts lib/ioTsBrands.d.ts && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imin-ltd/speck.git"
  },
  "author": "Luke Winship <luke.winship@gmail.com> (https://github.com/lukehesluke)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/imin-ltd/speck/issues"
  },
  "homepage": "https://github.com/imin-ltd/speck#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add lib/index.d.ts lib/ioTsBrands.d.ts"
    }
  },
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "husky": "^4.2.1",
    "typescript": "^3.7.5"
  },
  "engines": {
    "node": "10.16.0",
    "npm": "6.9.0"
  },
  "dependencies": {
    "fast-check": "^1.21.0",
    "fp-ts": "^2.4.1",
    "io-ts": "^2.0.6",
    "io-ts-reporters": "^1.2.2",
    "lodash": "^4.17.19",
    "moment": "^2.24.0"
  }
}
